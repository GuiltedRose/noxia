import "stdlibnx/memory"
import "stdlibnx/string"

fn puts(msg: ptr) -> void {
  let len = strlen(msg)
  sys_write(1, msg, len)
}

fn putchar(c: byte) -> void {
  let p = cast(malloc(1) as *byte)
  p[0] = c
  sys_write(1, p, 1)
}

fn print_int(val: int) -> void {
  let buf = malloc(20)
  let i = 0
  let v = val
  if v == 0 {
    putchar('0')
    return
  }

  while v > 0 {
    buf[i] = '0' + (v % 10)
    v = v / 10
    i = i + 1
  }

  while i > 0 {
    i = i - 1
    putchar(buf[i])
  }
}